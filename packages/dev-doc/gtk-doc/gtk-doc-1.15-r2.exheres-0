require gnome.org

SUMMARY="GTK API documentation generator"
HOMEPAGE="http://www.gtk.org/${PN}/"

UPSTEAM_DOCUMENTATION="
    http://library.gnome.org/devel/gtk-doc-manual/stable/ [[
        lang = en
        description = [ User manual ]
    ]]
"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-util/pkg-config[>=0.20]
    build+run:
        app-text/docbook-xml-dtd:4.3
        app-text/docbook-xsl-stylesheets
        app-text/openjade
        dev-libs/glib:2[>=2.6]
        dev-libs/libxslt
        dev-lang/perl:=[>=5.6]
        dev-lang/python:=[>=2.3]
        gnome-desktop/gnome-doc-utils
    run:
        app-doc/gtk-doc-autotools[~${PV}]
"

# These tests require dblatex (automagic) which enables pdf support for gtk-doc.
RESTRICT="test"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}/${PNV}-fixxref-vim-invocation.patch" )

src_install() {
    default

    # These are now provided by the gtk-doc-autotools package
    edo rm "${IMAGE}"usr/bin/{gtkdoc-rebase,gtkdocize} \
           "${IMAGE}"usr/share/aclocal/gtk-doc.m4      \
           "${IMAGE}"usr/share/gtk-doc/data/{gtk-doc.make,gtk-doc.notmpl.make}
    edo rmdir "${IMAGE}"usr/share/aclocal
}

