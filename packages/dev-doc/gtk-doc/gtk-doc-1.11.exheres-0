require gnome.org

SUMMARY="GTK API documentation generator"
HOMEPAGE="http://www.gtk.org/${PN}/"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-lang/perl:=[>=5.6]
        dev-lang/python:=[>=2.3]
        dev-libs/libxslt
        dev-libs/glib:2[>=2.6]
        app-text/docbook-xml-dtd:4.3
        app-text/docbook-xsl-stylesheets
    build:
        gnome-desktop/gnome-doc-utils[>=0.3.2]
        dev-util/pkg-config[>=0.20]
"

src_test() {
    if ! has_version ${CATEGORY}/${PN} ; then
        ewarn "${PN} tests need ${PN} installed"
        return
    fi
    default
}

