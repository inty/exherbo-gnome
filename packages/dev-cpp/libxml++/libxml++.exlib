require gnome.org

SUMMARY="C++ wrapper for the libxml2 XML parser library"
HOMEPAGE="http://libxmlplusplus.sourceforge.net/"
REMOTE_IDS="sourceforge:libxmlplusplus"

LICENCES="LGPL-2" # ++
SLOT="2.6"
MYOPTIONS="doc"

DEPENDENCIES="
    build+run:
        >=dev-libs/libxml2-2.6.1
        >=gnome-bindings/glibmm-2.4:2.4
    build:
          dev-util/pkg-config"

src_install() {
    default

    if option !doc; then
        rm -r "${IMAGE}/usr/share/doc/${PN}-${SLOT}" || die "Failed to remove docs"
    fi
}

