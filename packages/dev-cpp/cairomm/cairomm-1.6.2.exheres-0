SUMMARY="C++ bindings for Cairo"
HOMEPAGE="http://www.cairographics.org/"
DOWNLOADS="http://www.cairographics.org/releases/${PNV}.tar.gz"

LICENCES="LGPL-2"
SLOT="1.0"
PLATFORMS="~x86"
MYOPTIONS="doc"

DEPENDENCIES="
    build+run:
        >=x11-libs/cairo-1.2.0
    build:
        >=dev-util/pkg-config-0.20
        doc? ( app-doc/doxygen media-gfx/graphviz )
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( doc )

src_install() {
    default

    if ! option doc ; then
        rmdir "${IMAGE}/usr/share/doc/libcairomm-${SLOT}/reference/html" \
              "${IMAGE}/usr/share/doc/libcairomm-${SLOT}/reference"      \
              "${IMAGE}/usr/share/doc/libcairomm-${SLOT}" || die
    fi
}
