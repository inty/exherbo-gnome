require gnome.org

SUMMARY="GLib-based library for accessing online service APIs using the GData protocol"
DESCRIPTION="
libgdata is a GLib-based library for accessing online service APIs using the
GData protocol --- most notably, Google's services. It provides APIs to access
the common Google services, and has full asynchronous support.
"
HOMEPAGE="http://live.gnome.org/libgdata"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="gconf gobject-introspection"

DEPENDENCIES="
    build:
        dev-util/intltool[>=0.40.0]
        dev-util/pkg-config[>=0.20]
        gobject-introspection? (
            gnome-desktop/gir-repository[libsoup]
            gnome-desktop/gobject-introspection[>=0.9.7]
        )
    build+run:
        dev-libs/glib:2[>=2.19.0]
        dev-libs/libxml2:2.0
        gnome-desktop/libsoup:2.4[>=2.26.1][gconf?]
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'gconf gnome' 'gobject-introspection introspection' )

RESTRICT="test" # requires internet connections

