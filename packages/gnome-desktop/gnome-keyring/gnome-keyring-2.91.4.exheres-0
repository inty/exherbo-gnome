require gnome.org gsettings multilib

SUMMARY="GTK+ based keyring"
HOMEPAGE="http://www.gnome.org/"

LICENCES="GPL-2"
SLOT="1"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="gtk-doc pam"

DEPENDENCIES="
    build:
        dev-util/intltool[>=0.35.0]
        dev-util/pkg-config[>=0.18]
        gtk-doc? ( dev-doc/gtk-doc[>=1.9] )
    build+run:
        dev-libs/glib:2[>=2.25.0]
        x11-libs/gtk+:3.0[>=2.90.0]
        sys-apps/dbus[>=1.0]
        dev-libs/libgcrypt[>=1.2.2]
        dev-libs/libtasn1[>=0.3.4]
        !sys-libs/libcap [[ note = [ automagic dependency, need a patch ] ]]
        pam? ( sys-libs/pam )
"

RESTRICT="test" # requires X

DEFAULT_SRC_CONFIGURE_PARAMS=( '--with-root-certs=/usr/share/ca-certificates/'
                               '--enable-gpg-agent' '--with-gtk=3.0' )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( pam gtk-doc )
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( "pam pam-dir /$(get_libdir)/security" )

