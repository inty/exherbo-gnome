require gnome.org freedesktop-desktop python [ python_dep=2.6 ]

SUMMARY="A tool to customize GNOME 3 options."
HOMEPAGE="http://live.gnome.org/GnomeTweakTool"

# FIXME Nowhere on the homepage or in the source is the licence mentioned
LICENCES="as-is"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-util/pkg-config[>=0.16]
    build+run:
        gnome-desktop/gsettings-desktop-schemas[>=0.1.7]
        gnome-bindings/pygobject:2[>=2.27.91]
        gnome-platform/GConf[gobject-introspection]
    run:
        x11-libs/gtk+:3[gobject-introspection]
    suggestion:
        gnome-desktop/gnome-shell-extensions [[
            description = [ The user-theme extension is required for setting gnome-shell themes ] ]]
"

BUGS_TO="spoonb@exherbo.org"

src_compile() {
    python_disable_pyc
    default
}

src_install() {
    default
    python_bytecompile
}

