depend() {
	need localmount
	after bootmisc consolefont
	use hald
}

start() {
	ebegin "Starting GDM"
	start-stop-daemon --start --exec /usr/sbin/gdm-binary
	eend $?
}

stop() {
	ebegin "Stopping GDM"
	/usr/sbin/gdm-stop
	eend $?
}

restart() {
	ebegin "Restarting GDM"
	/usr/sbin/gdm-safe-restart
	eend $?
}

