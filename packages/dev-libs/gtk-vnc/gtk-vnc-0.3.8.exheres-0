require gtk-vnc

UPSTREAM_RELEASE_NOTES="https://sourceforge.net/project/shownotes.php?group_id=190580&release_id=645598"

SLOT="1"
PLATFORMS="~amd64"

MYOPTIONS="python mozilla-plugin"

DEPENDENCIES="
    build+run:
        >=x11-libs/gtk+-2.14.7:2
        >=dev-libs/gnutls-2.6.4
          dev-libs/glib:2
        python? ( >=dev-lang/python-2.4:=
                    gnome-bindings/pygtk:2 )
        mozilla-plugin? ( >=dev-libs/nspr-4
                          || ( >=dev-libs/xulrunner-1.8
                               >=net-www/firefox-2 ) )
    build:
        dev-util/pkg-config
"

DEFAULT_SRC_CONFIGURE_PARAMS=( '--with-coroutine=gthread' '--without-libview' )
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( python )

