require gtk-vnc

SLOT="1"
PLATFORMS="~amd64 ~x86"

MYOPTIONS="python sasl"

DEPENDENCIES="
    build:
        dev-util/intltool[>=0.35.0]
        dev-util/pkg-config[>=0.20]
    build+run:
        x11-libs/gtk+:2[>=2.10.0]
        dev-libs/gnutls[>=1.4.0]
        dev-libs/glib:2
        python? ( dev-lang/python:=[>=2.4]
                  gnome-bindings/pygtk:2 )
        sasl? ( net-libs/cyrus-sasl )
"

DEFAULT_SRC_CONFIGURE_PARAMS=( '--with-coroutine=gthread' '--without-libview' '--disable-plugin' )
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( python sasl )

src_install() {
    default
    edo rmdir "${IMAGE}/usr/bin"
}

