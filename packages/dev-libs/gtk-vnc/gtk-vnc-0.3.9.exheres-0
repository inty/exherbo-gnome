require gtk-vnc

SLOT="1"
PLATFORMS="~amd64 ~x86"

MYOPTIONS="mozilla-plugin python sasl"

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        x11-libs/gtk+:2[>=2.14.7]
        dev-libs/gnutls[>=2.6.4]
        dev-libs/glib:2
        mozilla-plugin? (
            dev-libs/nspr[>=4]
            || (
                dev-libs/xulrunner[>=1.8]
                net-www/firefox[>=2]
            )
        )
        python? (
            dev-lang/python:=[>=2.4]
            gnome-bindings/pygtk:2
        )
        sasl? ( dev-libs/cyrus-sasl )
"

DEFAULT_SRC_CONFIGURE_PARAMS=( '--with-coroutine=gthread' '--without-libview' )
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( python sasl )

