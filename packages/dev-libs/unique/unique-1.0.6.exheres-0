SUMMARY="Library for writing single instance applications"
HOMEPAGE="http://www.gnome.org/"
DOWNLOADS="http://www.gnome.org/~ebassi/source/${PNV}.tar.gz"

LICENCES="LGPL-2.1"
SLOT="1"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="doc"

DEPENDENCIES="
    build+run:
        dev-libs/glib:2[>=2.12]
        x11-libs/gtk+:2[>=2.11]
        dev-libs/dbus-glib[>=0.70]
    build:
        dev-util/pkg-config[>=0.20]
        doc? ( dev-doc/gtk-doc[>=1.6] )
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'doc gtk-doc' )

