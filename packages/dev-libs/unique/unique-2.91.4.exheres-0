require gnome.org [ pn=lib${PN} pnv=lib${PNV} ]

SUMMARY="Library for writing single instance applications"

LICENCES="LGPL-2.1"
SLOT="3.0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="dbus gtk-doc gobject-introspection"

DEPENDENCIES="
    build:
        dev-util/pkg-config[>=0.20]
        gtk-doc? ( dev-doc/gtk-doc[>=1.13] )
        gobject-introspection? ( gnome-desktop/gobject-introspection:1[>=0.6.7] )
    build+run:
        dev-libs/glib:2[>=2.25.7]
        x11-libs/gtk+:3.0[>=2.90][gobject-introspection?]
        dbus? ( dev-libs/dbus-glib[>=0.70] )
"

WORK="${WORKBASE}/lib${PNV}"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( dbus gtk-doc 'gobject-introspection introspection' )

