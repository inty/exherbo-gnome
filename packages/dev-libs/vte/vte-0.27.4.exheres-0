require gnome.org

SUMMARY="A terminal emulator widget"
HOMEPAGE="http://developer.gnome.org/arch/gnome/widgets/vte.html"

LICENCES="GPL-2"
SLOT="3.0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="doc gobject-introspection"

DEPENDENCIES="
    build:
        dev-util/intltool[>=0.35]
        dev-util/pkg-config[>=0.19]
        doc? ( dev-doc/gtk-doc[>=1.13] )
        gobject-introspection? ( gnome-desktop/gobject-introspection[>=0.9.0] )
    build+run:
        x11-libs/gtk+:3.0[>=2.91.6]
        dev-libs/glib:2[>=2.26.0]
        x11-libs/pango[>=1.22.0]
        sys-libs/ncurses
"

DEFAULT_SRC_CONFIGURE_PARAMS=( --disable-deprecation '--with-gtk=3.0' )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'doc gtk-doc' 'gobject-introspection introspection' )

