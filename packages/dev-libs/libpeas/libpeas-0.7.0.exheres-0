require gnome.org

SUMMARY="A GObject plugins library"
HOMEPAGE="http://git.gnome.org/browse/libpeas"

LICENCES="LGPL-2.1"
SLOT="1.0"
PLATFORMS="~amd64"
MYOPTIONS="doc gobject-introspection"

DEPENDENCIES="
    build:
        dev-util/pkg-config[>=0.20]
        dev-util/intltool[>=0.40.0]
        gnome-desktop/gobject-introspection:1[>=0.9.6]
        doc? ( dev-doc/gtk-doc[>=1.11] )
    build+run:
        dev-libs/glib:2[>=2.23.6]
        x11-libs/gtk+:3.0[gobject-introspection]
"

DEFAULT_SRC_CONFIGURE_PARAMS=( '--disable-seed' '--disable-python' )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'doc gtk-doc' 'gobject-introspection introspection' )

