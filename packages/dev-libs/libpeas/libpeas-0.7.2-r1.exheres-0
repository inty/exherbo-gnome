require gnome.org

SUMMARY="A GObject plugins library"
HOMEPAGE="http://git.gnome.org/browse/libpeas"

LICENCES="LGPL-2.1"
SLOT="1.0"
PLATFORMS="~amd64"
MYOPTIONS="gtk-doc python"

DEPENDENCIES="
    build:
        dev-util/pkg-config[>=0.20]
        dev-util/intltool[>=0.40.0]
        gtk-doc? ( dev-doc/gtk-doc[>=1.11] )
    build+run:
        dev-libs/glib:2[>=2.23.6]
        gnome-desktop/gobject-introspection:1[>=0.10.1]
        x11-libs/gtk+:3[gobject-introspection]
        python? (
            dev-lang/python:*[>=2.5.2]
            gnome-bindings/pygobject:2[>=2.20.0][gobject-introspection(+)]
        )
"

RESTRICT="test" # requires X

DEFAULT_SRC_CONFIGURE_PARAMS=( '--disable-seed' '--enable-gtk'
                               '--disable-glade-catalog' )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'gtk-doc' 'python' )

