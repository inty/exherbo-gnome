require gnome.org gsettings gtk-icon-cache

export_exlib_phases pkg_preinst src_install pkg_postinst pkg_postrm

gnome-3_pkg_preinst() {
    gtk_icon_cache_exlib_save_theme_directories
    default
}

gnome-3_src_install() {
    gsettings_src_install
}

gnome-3_pkg_postinst() {
    gtk_icon_cache_exlib_update_theme_cache
    gsettings_exlib_compile_gsettings_schemas
    default
}

gnome-3_pkg_postrm() {
    gtk_icon_cache_exlib_update_theme_cache
    gsettings_exlib_compile_gsettings_schemas
    default
}
